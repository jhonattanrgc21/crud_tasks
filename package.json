{
  "name": "crud-task",
  "version": "1.0.0",
  "description": "El proposito de este proyecto es realizar un CRUD de tareas utilizando Node.js, TypeScript y mongoDB.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node src/",
    "build": "npm run clean && tsc && npm run hbscopy && npm run public",
    "clean": "rimraf ./dist",
    "hbscopy": "ncp ./src/views/ ./dist/views/",
    "public": "ncp ./src/public/ ./dist/public/",
    "start": "node dist/index"
  },
  "keywords": [
    "node",
    "typescript",
    "mongoDB",
    "task",
    "CRUD"
  ],
  "author": "Jhonattan Garcia",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/express-handlebars": "^3.1.0",
    "@types/morgan": "^1.9.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@handlebars/allow-prototype-access": "^1.0.3",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.0",
    "mongoose": "^5.11.9",
    "morgan": "^1.10.0",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2"
  }
}
